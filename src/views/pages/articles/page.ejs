<section class="section">

  <div class="row">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Manage Articles</h5>
          <a href="/admin/articles/add" class="btn btn-sm btn-success mb-3">
            <i class="bi bi-file-earmark-text"></i>
            Add Articles
          </a>

          <table id="myTable" class="hover row-border cell-border">
            <thead>
              <tr>
                <th>#</th>
                <th>Title</th>
                <th>Created At</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% for (let i=0; i < data.length; i++) { %>
                <tr>
                  <td>
                    <%= i + 1 %>
                  </td>
                  <td>
                    <%= data[i].title %>
                  </td>
                  <td>
                    <%= data[i].createdAt.toLocaleDateString('id-ID') %>
                  </td>
                  <td><a href="/admin/articles/show/<%= data[i].id %>">Show</a></td>
                </tr>
                <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>